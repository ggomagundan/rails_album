<div id="paintings">
  <% for painting in @paintings %>
    <div class="painting">
      <%= link_to((image_tag painting.image_url(:thumb) if painting.image?), painting) %>
      <div class="name"><%= painting.name %></div>
      <div class="actions">
        <%= link_to "edit", edit_painting_path(:id) %> |
        <%= link_to "remove", painting, :confirm => 'Are you sure?', :method => :delete %>
      </div>
    </div>
  <% end %>
  <div class="clear"></div>
</div>






